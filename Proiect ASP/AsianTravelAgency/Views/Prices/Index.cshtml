@model IEnumerable<AsianTravelAgency.Models.Prices>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnePersonPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TwoPersonsPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThreePersonsPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SendingWay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guiding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavingFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TripInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnePersonPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TwoPersonsPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThreePersonsPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendingWay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guiding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeavingFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TripInfo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
