@model AsianTravelAgency.Models.ViewModels.PicturesViewModel.DisplayAllPictureViewModel

@{
    ViewData["Title"] = "Pictures";
}

<div class="container">
    <div class="row">
         <a asp-action="AddPicture">
            <input type="button" value="+" class="btn btn-outline-secondary spacing filter" />
        </a> 
    </div>
</div>

@if(Model.Pictures.Count() == 0)
{
    <div class="container">
        <div class="row">
            <span>No pictures</span>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-center mb-5 customized-buttons">
                <button type="button" class="btn btn-outline-secondary spacing filter" data-rel="all">All</button>
                @foreach (string Country in Model.Countries)
                {
                    <button type="button" class="btn btn-outline-secondary spacing filter" data-rel="@Country">@Country</button>
                }
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="gallery" id="gallery">
                @foreach (var Picture in Model.Pictures)
                {
                    <div class="mb-3 pics animation all @Picture.Country">
                        <img class="img-fluid" src="~/images/@Picture.PictureName">
                    </div>
                    <a asp-action="Delete" asp-route-id="@Picture.Id">Delete</a>
                }
            </div>
        </div>
    </div>
}
